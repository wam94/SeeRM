[flake8]
max-line-length = 100
extend-ignore = E203,W503
per-file-ignores =
    __init__.py:F401
    app/dossier_baseline.py:D100,D103,D205,D400,D401,E501
    scripts/probe_funding.py:D103,D200,D205,D400,E501
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    *.egg-info
